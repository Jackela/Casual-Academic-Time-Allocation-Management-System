{
  "name": "@catams/process-orchestrator",
  "version": "1.0.0",
  "description": "Enterprise Process Orchestrator for CATAMS - Zero-tolerance process management with comprehensive audit logging",
  "main": "src/core/ProcessOrchestrator.js",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "catams": "./cli.js"
  },
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration",
    "lint": "eslint src tests --ext .js",
    "lint:fix": "eslint src tests --ext .js --fix",
    "audit": "npm audit",
    "validate": "npm run lint && npm run test",
    "validate:performance": "node scripts/validate-performance.js",
    "start:monitoring": "node -e \"const MonitoringSystem = require('./src/MonitoringSystem'); const system = new MonitoringSystem(); system.startMonitoring().catch(console.error)\"",
    "build": "echo 'No build step required for CommonJS'",
    "start": "node src/core/ProcessOrchestrator.js",
    "cli": "node cli.js",
    "cli:dashboard": "node cli.js dashboard",
    "cli:monitor": "node cli.js monitor --dashboard",
    "cli:help": "node cli.js help-system --interactive",
    "cli:test": "node test-cli.js",
    "cli:demo": "node demo-cli.js",
    "cli:status": "node cli.js status --format table",
    "cli:export": "node cli.js export --type all --format html"
  },
  "keywords": [
    "process-management",
    "orchestrator",
    "enterprise",
    "audit",
    "lifecycle",
    "zero-tolerance"
  ],
  "author": "CATAMS Team",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "winston": "^3.11.0",
    "cross-spawn": "^7.0.3",
    "pidusage": "^3.0.2",
    "why-is-node-running": "^2.2.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "boxen": "^5.1.2",
    "cli-progress": "^3.12.0",
    "figlet": "^1.6.0",
    "gradient-string": "^2.0.2",
    "fuzzy": "^0.1.3",
    "ws": "^8.14.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn"
    }
  }
}